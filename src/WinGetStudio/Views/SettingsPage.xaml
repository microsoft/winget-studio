<Page
    x:Class="WinGetStudio.Views.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xaml="using:Microsoft.UI.Xaml"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:ct="using:CommunityToolkit.WinUI.Controls"
    xmlns:localControls="using:WinGetStudio.Views.Controls"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
        <i:EventTriggerBehavior EventName="Unloaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.UnloadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Grid>
        <StackPanel x:Name="ContentArea">

            <!-- Personalization header with buttons -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <!-- Title -->
                <TextBlock x:Uid="Settings_Personalization"
                           Style="{ThemeResource SubtitleTextBlockStyle}" />

                <!-- Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                    <Button Command="{x:Bind ViewModel.OpenLogsCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <FontIcon Glyph="&#xE838;" FontSize="{ThemeResource BodyTextBlockFontSize}"/>
                            <TextBlock x:Uid="Settings_OpenLogs" FontSize="{ThemeResource BodyTextBlockFontSize}"/>
                        </StackPanel>
                    </Button>
                    <Button Command="{x:Bind ViewModel.OpenSettingsCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <FontIcon Glyph="&#xE943;" FontSize="{ThemeResource BodyTextBlockFontSize}"/>
                            <TextBlock x:Uid="Settings_EditSettings" FontSize="{ThemeResource BodyTextBlockFontSize}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <StackPanel Margin="{StaticResource SmallTopBottomMargin}">
                <!-- Telemetry setting -->
                <ct:SettingsCard x:Uid="Settings_DisableTelemetry">
                    <ct:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE9D2;" />
                    </ct:SettingsCard.HeaderIcon>
                    <ToggleSwitch IsOn="{x:Bind ViewModel.DisableTelemetry, Mode=OneWay}"
                                  x:Name="TelemetryToggleSwitch">
                        <i:Interaction.Behaviors>
                            <i:EventTriggerBehavior EventName="Toggled">
                                <i:InvokeCommandAction Command="{x:Bind ViewModel.ToggleTelemetryCommand}"
                                                       CommandParameter="{x:Bind TelemetryToggleSwitch.IsOn, Mode=OneWay}"/>
                            </i:EventTriggerBehavior>
                        </i:Interaction.Behaviors>
                    </ToggleSwitch>
                </ct:SettingsCard>

                <!-- Theme setting -->
                <ct:SettingsCard x:Uid="Settings_Theme">
                    <ct:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE790;" />
                    </ct:SettingsCard.HeaderIcon>
                    <ComboBox x:Name="ThemeComboBox"
                              ItemsSource="{x:Bind ViewModel.Themes}"
                              SelectedIndex="{x:Bind ViewModel.SelectedThemeIndex, Mode=OneWay}"
                              DisplayMemberPath="Name">
                        <i:Interaction.Behaviors>
                            <i:EventTriggerBehavior EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{x:Bind ViewModel.SwitchThemeCommand}"
                                                       CommandParameter="{x:Bind ThemeComboBox.SelectedItem, Mode=OneWay}"/>
                            </i:EventTriggerBehavior>
                        </i:Interaction.Behaviors>
                    </ComboBox>
                </ct:SettingsCard>
            </StackPanel>

            <!-- Cache -->
            <TextBlock x:Uid="Settings_Resources" Style="{ThemeResource SubtitleTextBlockStyle}" />
            <StackPanel Margin="{StaticResource SmallTopBottomMargin}">
                <ct:SettingsCard x:Uid="Settings_ClearResourcesCache">
                    <ct:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xEDA2;" />
                    </ct:SettingsCard.HeaderIcon>
                    <Button x:Uid="Settings_ClearResourcesCacheButton" Command="{x:Bind ViewModel.ClearModuleCatalogsCacheCommand}"/>
                </ct:SettingsCard>
            </StackPanel>

            <!-- About -->
            <TextBlock x:Uid="Settings_About" Style="{ThemeResource SubtitleTextBlockStyle}" />
            <StackPanel Margin="{StaticResource XSmallTopMargin}">
                <!-- Make the version text clickable to copy to clipboard -->
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{x:Bind ViewModel.VersionDescription, Mode=OneWay}"
                        Style="{ThemeResource BodyTextBlockStyle}"
                        VerticalAlignment="Center"
                    />
                    <localControls:CopyButton Content="&#xE8C8;"
                        Margin="{ThemeResource XSmallLeftMargin}"
                        Click="CopyVersionToClipboard"
                        Background="Transparent"
                        BorderThickness="0"
                    />
                </StackPanel>

                <TextBlock
                    x:Uid="Settings_AboutDescription"
                    Margin="{StaticResource XSmallTopMargin}"
                    Style="{ThemeResource BodyTextBlockStyle}" />
                <HyperlinkButton x:Uid="SettingsPage_PrivacyTermsLink" Margin="{StaticResource SettingsPageHyperlinkButtonMargin}" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
