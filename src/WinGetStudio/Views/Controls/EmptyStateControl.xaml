<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinGetStudio.Views.Controls">

    <x:Double x:Key="EmptyStateIconFontSize">64</x:Double>

    <Style BasedOn="{StaticResource DefaultEmptyStateControlStyle}" TargetType="local:EmptyStateControl" />

    <Style x:Key="DefaultEmptyStateControlStyle" TargetType="local:EmptyStateControl">
        <Setter Property="Foreground" Value="{ThemeResource TextFillColorTertiaryBrush}" />
        <Setter Property="FontSize" Value="{ThemeResource BodyTextBlockFontSize}" /> 
        <Setter Property="IconSize" Value="{ThemeResource EmptyStateIconFontSize}" /> 
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:EmptyStateControl">
                    <Grid>
                        <StackPanel Spacing="12"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                            <FontIcon Foreground="{TemplateBinding Foreground}"
                                      Glyph="{TemplateBinding Glyph}"
                                      FontSize="{TemplateBinding IconSize}" />
                            <TextBlock HorizontalAlignment="Center"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontSize="{TemplateBinding FontSize}"
                                       Text="{TemplateBinding Text}" />
                        </StackPanel>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
