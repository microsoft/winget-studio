<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="WinGetStudio.Views.Controls.ActivityPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinGetStudio.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:localConverters="using:WinGetStudio.Converters"
    xmlns:viewmodels="using:WinGetStudio.ViewModels.Controls"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    mc:Ignorable="d">
    <UserControl.Resources>
        <localConverters:ActivitySeverityConverter x:Key="SeverityConverter" />
        <Style x:Key="ItemContainerStyle" TargetType="ListViewItem">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
        <ItemsPanelTemplate x:Key="ItemsPanel">
            <StackPanel Spacing="4" />
        </ItemsPanelTemplate>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" x:Uid="NotificationPane_Title" />

        <!-- Activity list -->
        <ListView ItemsSource="{x:Bind ViewModel.Activities}"
                  Grid.Row="1"
                  SelectionMode="None"
                  ItemsPanel="{StaticResource ItemsPanel}"
                  ItemContainerStyle="{StaticResource ItemContainerStyle}">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:ActivityViewModel">
                    <InfoBar IsOpen="True"
                             Style="{ThemeResource ClosableActivityInfoBar}"
                             Severity="{x:Bind Severity, Mode=OneWay, Converter={StaticResource SeverityConverter}}"
                             Title="{x:Bind Title, Mode=OneWay}"
                             Message="{x:Bind Message, Mode=OneWay}">
                    </InfoBar>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
