<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="WinGetStudio.Views.Controls.NotificationPane"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinGetStudio.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:localConverters="using:WinGetStudio.Converters"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:notifications="using:WingetStudio.Services.VisualFeedback.Models"
    mc:Ignorable="d">
    <UserControl.Resources>
        <converters:DoubleToVisibilityConverter x:Key="CountToVisibilityConverter" GreaterThan="0" FalseValue="Collapsed" TrueValue="Visible" />
        <localConverters:NotificationSeverityConverter x:Key="SeverityConverter" />
        <Style x:Key="ItemContainerStyle" TargetType="ListViewItem">
            <Setter Property="Padding" Value="0" />
            <Setter Property="Margin" Value="0" />
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>
        <ItemsPanelTemplate x:Key="ItemsPanel">
            <StackPanel Spacing="4" />
        </ItemsPanelTemplate>
    </UserControl.Resources>

    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
        <i:EventTriggerBehavior EventName="Unloaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.UnloadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <Grid x:Name="PaneRoot" Tag="{x:Bind}">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" x:Uid="NotificationPane_Title" />

        <!-- Show previous notifications button -->
        <HyperlinkButton Grid.Row="1"
                         x:Uid="NotificationPane_ShowAll"
                         Style="{ThemeResource TextBlockButtonStyle}"
                         Command="{x:Bind ViewModel.ShowPreviousNotificationsCommand}"/>

        <!-- Notifications list -->
        <ScrollViewer Grid.Row="2">
            <StackPanel Grid.Row="2" Spacing="12">
                <!-- Unread notifications section -->
                <ListView ItemsSource="{x:Bind ViewModel.UnreadNotifications}"
                          SelectionMode="None"
                          ItemsPanel="{StaticResource ItemsPanel}"
                          ItemContainerStyle="{StaticResource ItemContainerStyle}">
                    <ListView.ItemTemplate>
                        <DataTemplate x:DataType="notifications:NotificationMessage">
                            <InfoBar IsOpen="True"
                                     Style="{ThemeResource UnreadInAppNotification}"
                                     Severity="{x:Bind Severity, Converter={StaticResource SeverityConverter}}"
                                     CloseButtonCommand="{Binding ElementName=PaneRoot, Path=Tag.ViewModel.MarkAsReadCommand, Mode=OneWay}"
                                     CloseButtonCommandParameter="{x:Bind}"
                                     Title="{x:Bind Title}"
                                     Message="{x:Bind Message}">
                            </InfoBar>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- Previous notifications section -->
                <Grid Visibility="{x:Bind ViewModel.ArePreviousNotificationsVisible, Mode=OneWay}">
                    <StackPanel Spacing="12"
                                Visibility="{x:Bind ViewModel.PreviousNotifications.Count, Mode=OneWay, Converter={StaticResource CountToVisibilityConverter}}">
                        <NavigationViewItemSeparator />
                        <TextBlock Style="{ThemeResource BodyTextBlockStyle}"
                                   x:Uid="NotificationPane_Previous"
                                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                        <ListView ItemsSource="{x:Bind ViewModel.PreviousNotifications}"
                                  ItemsPanel="{StaticResource ItemsPanel}"
                                  ItemContainerStyle="{StaticResource ItemContainerStyle}"
                                  SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="notifications:NotificationMessage">
                                    <InfoBar IsOpen="True"
                                             Style="{ThemeResource ReadInAppNotification}"
                                             Severity="{x:Bind Severity, Converter={StaticResource SeverityConverter}}"
                                             Title="{x:Bind Title}"
                                             Message="{x:Bind Message}" />
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
