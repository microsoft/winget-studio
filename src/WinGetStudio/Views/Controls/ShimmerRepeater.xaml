<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinGetStudio.Views.Controls"
    xmlns:labs="using:CommunityToolkit.Labs.WinUI">

    <x:Double x:Key="ShimmerHeight">48</x:Double>
    <x:Double x:Key="ShimmerSpacing">8</x:Double>

    <Style BasedOn="{StaticResource DefaultShimmerRepeaterStyle}" TargetType="local:ShimmerRepeater" />

    <Style x:Key="DefaultShimmerRepeaterStyle" TargetType="local:ShimmerRepeater">
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <labs:Shimmer Height="{ThemeResource ShimmerHeight}" />
                </DataTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Layout">
            <Setter.Value>
                <StackLayout Spacing="{StaticResource ShimmerSpacing}" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ShimmerRepeater">
                    <Grid>
                        <ItemsRepeater x:Name="PART_Repeater"
                                       Layout="{TemplateBinding Layout}"
                                       ItemTemplate="{TemplateBinding ItemTemplate}"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
