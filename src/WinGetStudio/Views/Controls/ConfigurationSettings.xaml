<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="WinGetStudio.Views.Controls.ConfigurationSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinGetStudio.Views.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:WinGetStudio.Models"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:selectors="using:WinGetStudio.Selectors"
    xmlns:localConverters="using:WinGetStudio.Converters"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:BoolToObjectConverter x:Key="BoolToIntNegationConverter" TrueValue="0" FalseValue="1"/>
        <localConverters:PropertyTypeToNumberConverter x:Key="PropertyTypeToNumberConverter"/>

        <selectors:PropertyTemplateSelector x:Key="PropertyTemplateSelector"
             BooleanTemplate="{StaticResource BooleanTemplate}"
             NumberTemplate="{StaticResource NumberTemplate}"
             StringTemplate="{StaticResource StringTemplate}"
             ObjectTemplate="{StaticResource ObjectTemplate}"/>

        <DataTemplate x:Key="StringTemplate" x:DataType="model:ConfigurationProperty">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBox Text="{Binding Name, Mode=TwoWay}" MinWidth="150"/>
                <ComboBox SelectionChanged="ChangePropertyType" SelectedIndex="{Binding Value.Type, Converter={StaticResource PropertyTypeToNumberConverter}}">
                    <ComboBoxItem x:Uid="SettingsControl_StringLabel" Tag="Str"/>
                    <ComboBoxItem x:Uid="SettingsControl_BooleanLabel" Tag="Bool"/>
                    <ComboBoxItem x:Uid="SettingsControl_NumberLabel" Tag="Num"/>
                    <ComboBoxItem x:Uid="SettingsControl_ObjectLabel" Tag="Obj"/>
                </ComboBox>
                <TextBox Text="{Binding Value.Value, Mode=TwoWay}" MinWidth="200"/>
                <Button Click="RemoveValidationProperty">
                    <FontIcon Glyph="&#xE894;" FontSize="14"/>
                </Button>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="BooleanTemplate" x:DataType="model:ConfigurationProperty">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBox Text="{Binding Name, Mode=TwoWay}" MinWidth="150"/>
                <ComboBox SelectionChanged="ChangePropertyType" SelectedIndex="{Binding Value.Type, Mode=OneWay, Converter={StaticResource PropertyTypeToNumberConverter}}">
                    <ComboBoxItem x:Uid="SettingsControl_StringLabel" Tag="Str"/>
                    <ComboBoxItem x:Uid="SettingsControl_BooleanLabel" Tag="Bool"/>
                    <ComboBoxItem x:Uid="SettingsControl_NumberLabel" Tag="Num"/>
                    <ComboBoxItem x:Uid="SettingsControl_ObjectLabel" Tag="Obj"/>
                </ComboBox>
                <ComboBox SelectedIndex="{Binding Value.Value, Mode=TwoWay, Converter={StaticResource BoolToIntNegationConverter}}" Width="200">
                    <ComboBoxItem x:Uid="SettingsControl_True"/>
                    <ComboBoxItem x:Uid="SettingsControl_False"/>
                </ComboBox>
                <Button Click="RemoveValidationProperty">
                    <FontIcon Glyph="&#xE894;" FontSize="14"/>
                </Button>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="NumberTemplate" x:DataType="model:ConfigurationProperty">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBox Text="{Binding Name, Mode=TwoWay}" MinWidth="150"/>
                <ComboBox SelectionChanged="ChangePropertyType" SelectedIndex="{Binding Value.Type, Converter={StaticResource PropertyTypeToNumberConverter}}">
                    <ComboBoxItem x:Uid="SettingsControl_StringLabel" Tag="Str"/>
                    <ComboBoxItem x:Uid="SettingsControl_BooleanLabel" Tag="Bool"/>
                    <ComboBoxItem x:Uid="SettingsControl_NumberLabel" Tag="Num"/>
                    <ComboBoxItem x:Uid="SettingsControl_ObjectLabel" Tag="Obj"/>
                </ComboBox>
                <NumberBox Value="{Binding Value.Value, Mode=TwoWay}" MinWidth="200"/>
                <Button Click="RemoveValidationProperty">
                    <FontIcon Glyph="&#xE894;" FontSize="14"/>
                </Button>
            </StackPanel>
        </DataTemplate>

        <DataTemplate x:Key="ObjectTemplate">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                    <TextBox Text="{Binding Name, Mode=TwoWay}" MinWidth="50"/>
                    <ComboBox SelectionChanged="ChangePropertyType" SelectedIndex="{Binding Value.Type, Converter={StaticResource PropertyTypeToNumberConverter}}">
                        <ComboBoxItem x:Uid="SettingsControl_StringLabel" Tag="Str"/>
                        <ComboBoxItem x:Uid="SettingsControl_BooleanLabel" Tag="Bool"/>
                        <ComboBoxItem x:Uid="SettingsControl_NumberLabel" Tag="Num"/>
                        <ComboBoxItem x:Uid="SettingsControl_ObjectLabel" Tag="Obj"/>
                    </ComboBox>
                    <SplitButton Click="NewValidationPropertyDefault" VerticalAlignment="Center">
                        <TextBlock x:Uid="SettingsControl_AddPropertyText"/>
                        <SplitButton.Flyout>
                            <MenuFlyout>
                                <MenuFlyoutItem x:Uid="SettingsControl_String" Click="NewValidationProperty" Tag="Str"/>
                                <MenuFlyoutItem x:Uid="SettingsControl_Boolean" Click="NewValidationProperty" Tag="Bool"/>
                                <MenuFlyoutItem x:Uid="SettingsControl_Number" Click="NewValidationProperty" Tag="Num"/>
                                <MenuFlyoutItem x:Uid="SettingsControl_Object" Click="NewValidationProperty" Tag="Obj"/>
                            </MenuFlyout>
                        </SplitButton.Flyout>
                    </SplitButton>
                    <Button Click="RemoveValidationProperty">
                        <FontIcon Glyph="&#xE894;" FontSize="14"/>
                    </Button>
                </StackPanel>
                <ListView
                    ItemsSource="{Binding Value.Value, Mode=TwoWay}"
                    Width="Auto"
                    Height="Auto"
                    IsItemClickEnabled="False"
                    SelectionMode="None"
                    Margin="16,0,0,0"
                    ItemTemplateSelector="{StaticResource PropertyTemplateSelector}"/>
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    
    <Grid Width="Auto" ColumnSpacing="10" RowSpacing="8" Grid.Row="2" Grid.Column="0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Uid="SettingsControl_PropertiesText" MinWidth="150" FontWeight="Bold" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
        <SplitButton Click="NewValidationPropertyDefault" Margin="0,8,0,0" Grid.Column="2" Grid.Row="0">
            <TextBlock x:Uid="SettingsControl_AddPropertyText"/>
            <SplitButton.Flyout>
                <MenuFlyout>
                    <MenuFlyoutItem x:Uid="SettingsControl_String" Click="NewValidationProperty" Tag="Str"/>
                    <MenuFlyoutItem x:Uid="SettingsControl_Boolean" Click="NewValidationProperty" Tag="Bool"/>
                    <MenuFlyoutItem x:Uid="SettingsControl_Number" Click="NewValidationProperty" Tag="Num"/>
                    <MenuFlyoutItem x:Uid="SettingsControl_Object" Click="NewValidationProperty" Tag="Obj"/>
                </MenuFlyout>
            </SplitButton.Flyout>
        </SplitButton>
        <ListView
            ItemsSource="{x:Bind Properties, Mode=TwoWay}"
            CanBeScrollAnchor="True"
            Width="Auto"
            Height="Auto"
            IsItemClickEnabled="False"
            SelectionMode="None"
            Grid.Row="1"
            Grid.ColumnSpan="3"
            ItemTemplateSelector="{StaticResource PropertyTemplateSelector}"/>
    </Grid>
</UserControl>
