<Page  
    x:Class="WinGetStudio.Views.ValidationPage"  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:model="using:WinGetStudio.Models"
    xmlns:selectors="using:WinGetStudio.Selectors"
    xmlns:usercontrols="using:WinGetStudio.Views.Controls"
    xmlns:localConverters="using:WinGetStudio.Converters"
    xmlns:models="using:WinGetStudio.Services.DesiredStateConfiguration.Explorer.Models"
    xmlns:vm="using:WinGetStudio.ViewModels"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    mc:Ignorable="d">

    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>

    <Page.Resources>
        <converters:BoolNegationConverter x:Key="BoolNegationConverter" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibilityNegationConverter" TrueValue="Collapsed" FalseValue="Visible" />
        <converters:BoolToObjectConverter x:Key="BoolToIntConverter" TrueValue="1" FalseValue="0"/>
        <converters:BoolToObjectConverter x:Key="BoolToIntNegationConverter" TrueValue="0" FalseValue="1"/>
        <localConverters:ResourceSuggestionMatchConverter x:Key="ResourceSuggestionMatchConverter"/>
    </Page.Resources>

    <Grid x:Name="ContentArea" Padding="0" ColumnSpacing="32" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Spacing="8" Grid.Row="0">
            <!-- Description -->
            <TextBlock Margin="0,0,0,8" HorizontalAlignment="Left">
                <Run x:Uid="ValidationPage_Description"/>
                <Hyperlink NavigateUri="https://learn.microsoft.com/en-us/powershell/dsc/concepts/resources/operations?view=dsc-3.0">
                    <Run x:Uid="ValidationPage_LearnMoreLink"/>
                </Hyperlink>
            </TextBlock>

            <!-- Search form -->
            <Grid ColumnSpacing="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <!-- Search input -->
                <AutoSuggestBox x:Uid="ValidationPage_ModuleInput"
                                Text="{x:Bind ViewModel.SearchResourceText, Mode=TwoWay}"
                                TextMemberPath="SearchText"
                                ItemsSource="{x:Bind ViewModel.SelectedSuggestions, Mode=OneWay}">
                    <!-- Search commands -->
                    <i:Interaction.Behaviors>
                        <i:EventTriggerBehavior EventName="TextChanged">
                            <i:InvokeCommandAction Command="{x:Bind ViewModel.SearchTextChangedCommand}" />
                        </i:EventTriggerBehavior>
                        <i:EventTriggerBehavior EventName="QuerySubmitted">
                            <i:InvokeCommandAction Command="{x:Bind ViewModel.QuerySubmittedCommand}" />
                        </i:EventTriggerBehavior>
                    </i:Interaction.Behaviors>

                    <!-- Search icon -->
                    <AutoSuggestBox.QueryIcon>
                        <FontIcon Glyph="&#xE7B8;" FontSize="{ThemeResource CaptionTextBlockFontSize}" />
                    </AutoSuggestBox.QueryIcon>

                    <!-- Search result template -->
                    <AutoSuggestBox.ItemTemplate>
                        <DataTemplate x:DataType="vm:ResourceSuggestionViewModel">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="auto" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <!-- Icon -->
                                    <controls:SwitchPresenter Value="{x:Bind IsResult}" TargetType="x:Boolean">
                                        <controls:Case Value="True">
                                            <FontIcon Glyph="&#xE7B8;" FontSize="{ThemeResource CaptionTextBlockFontSize}" />
                                        </controls:Case>
                                        <controls:Case Value="False">
                                            <FontIcon Glyph="&#xE70F;" FontSize="{ThemeResource CaptionTextBlockFontSize}" />
                                        </controls:Case>
                                    </controls:SwitchPresenter>

                                    <!-- Title -->
                                    <controls:SwitchPresenter Value="{x:Bind IsResult}" TargetType="x:Boolean">
                                        <controls:Case Value="True">
                                            <ContentControl Content="{x:Bind Converter={StaticResource ResourceSuggestionMatchConverter}}" />
                                        </controls:Case>
                                        <controls:Case Value="False">
                                            <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}"
                                                       TextTrimming="CharacterEllipsis"
                                                       Style="{ThemeResource BodyStrongTextBlockStyle}"/>
                                        </controls:Case>
                                    </controls:SwitchPresenter>

                                    <!-- Version -->
                                    <TextBlock VerticalAlignment="Center"
                                               Style="{ThemeResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               Text="{x:Bind Version}"
                                               TextTrimming="CharacterEllipsis" />
                                </StackPanel>

                                <!-- Tags -->
                                <ItemsRepeater ItemsSource="{x:Bind Tags}" Grid.Column="1">
                                    <ItemsRepeater.Layout>
                                        <StackLayout Orientation="Horizontal" Spacing="4" />
                                    </ItemsRepeater.Layout>
                                    <ItemsRepeater.ItemTemplate>
                                        <DataTemplate x:DataType="x:String">
                                            <Border Background="{ThemeResource SystemFillColorCautionBackgroundBrush}"
                                                    Padding="6,2"
                                                    CornerRadius="10">
                                                <TextBlock Foreground="{ThemeResource SystemFillColorCautionBrush}"
                                                           Text="{x:Bind}"
                                                           VerticalAlignment="Center" Style="{ThemeResource CaptionTextBlockStyle}"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsRepeater.ItemTemplate>
                                </ItemsRepeater>
                            </Grid>
                        </DataTemplate>
                    </AutoSuggestBox.ItemTemplate>
                </AutoSuggestBox>

                <!-- Action buttons-->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="4">
                    <Button VerticalAlignment="Stretch" Click="ExploreResource_Click">
                        <FontIcon FontSize="{ThemeResource ContentControlFontSize}" Glyph="&#xE946;" />
                    </Button>
                    <Button VerticalAlignment="Stretch" Command="{x:Bind ViewModel.ReloadCommand}">
                        <FontIcon FontSize="{ThemeResource ContentControlFontSize}" Glyph="&#xE72C;" />
                    </Button>
                </StackPanel>
            </Grid>
        </StackPanel>

        <Rectangle Height="1"
                   Fill="{ThemeResource SystemControlForegroundBaseLowBrush}"
                   HorizontalAlignment="Stretch"
                   Margin="0,8"
                   Grid.Row="1"/>

        <Grid Grid.Row="2" ColumnSpacing="8" x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <!-- Results output -->
            <Grid Width="Auto" ColumnSpacing="10" RowSpacing="12" Grid.Column="2" MinWidth="200">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock x:Uid="ValidationPage_ResultsText" FontWeight="Bold" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"/>
                <Button Command="{x:Bind ViewModel.ConvertYamlToUICommand}" Grid.Column="1" Grid.Row="0">
                    <TextBlock x:Uid="ValidationPage_ResultsToUIText"/>
                </Button>
                <Button Click="{x:Bind CopyResultsToClipboard}" Grid.Column="2" Grid.Row="0">
                    <TextBlock x:Uid="ValidationPage_CopyToClipboard"/>
                </Button>

                <TextBox Width="Auto"
                         Text="{x:Bind ViewModel.RawData, Mode=TwoWay}"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         Grid.Row="1"
                         Grid.ColumnSpan="4"
                         IsReadOnly="True"/>
            </Grid>

            <!-- Resizer -->
            <controls:ContentSizer Grid.Row="2"
                                   Grid.RowSpan="2"
                                   Grid.Column="1"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   TargetControl="{x:Bind PropertiesGrid}"/>

            <!-- Properties -->
            <Grid Grid.Column="0" x:Name="PropertiesGrid" MinWidth="300">
                <usercontrols:ConfigurationSettings Properties="{x:Bind ViewModel.Properties, Mode=OneWay}"
                                                Grid.Column="0"
                                                HorizontalAlignment="Stretch"/>

                <TextBlock x:Uid="ValidationPage_EmptyPropertiesMessage"
                       Visibility="{x:Bind ViewModel.IsPropertiesEmpty, Mode=OneWay}"
                       Grid.Row="1"
                       Grid.Column="0"
                       HorizontalAlignment="Center"
                       Margin="0,50,0,0"
                       TextAlignment="Center"/>

                <Grid ColumnSpacing="8" Margin="0,12,0,0" VerticalAlignment="Bottom" Grid.Row="1" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <!-- <ColumnDefinition Width="*"/> -->
                    </Grid.ColumnDefinitions>
                    <Button x:Uid="ValidationPage_GetButton" Command="{x:Bind ViewModel.GetCommand}" IsEnabled="{x:Bind ViewModel.ActionsEnabled}" HorizontalAlignment="Stretch" Grid.Column="0"/>
                    <Button x:Uid="ValidationPage_SetButton" Command="{x:Bind ViewModel.SetCommand}" IsEnabled="{x:Bind ViewModel.ActionsEnabled}" HorizontalAlignment="Stretch" Grid.Column="1"/>
                    <Button x:Uid="ValidationPage_TestButton" Command="{x:Bind ViewModel.TestCommand}" IsEnabled="{x:Bind ViewModel.ActionsEnabled}" HorizontalAlignment="Stretch" Grid.Column="2"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>