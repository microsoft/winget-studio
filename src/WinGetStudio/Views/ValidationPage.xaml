<Page
    x:Class="WinGetStudio.Views.ValidationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="using:CommunityToolkit.WinUI.Converters"
    xmlns:controls="using:CommunityToolkit.WinUI.Controls"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:model="using:WinGetStudio.Models"
    xmlns:localControls="using:WinGetStudio.Views.Controls"
    xmlns:localConverters="using:WinGetStudio.Converters"
    xmlns:models="using:WinGetStudio.Services.DesiredStateConfiguration.Explorer.Models"
    xmlns:vm="using:WinGetStudio.ViewModels"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    mc:Ignorable="d">

    <Page.Resources>
        <x:Double x:Key="SectionMinWidth">100</x:Double>
    </Page.Resources>

    <!-- Page layout -->
    <Grid x:Name="ContentArea" ColumnSpacing="32" RowSpacing="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page header -->
        <StackPanel Spacing="8">
            <!-- Description -->
            <TextBlock Margin="0,0,0,8" HorizontalAlignment="Left">
                <Run x:Uid="ValidationPage_Description"/>
                <Hyperlink NavigateUri="https://learn.microsoft.com/en-us/powershell/dsc/concepts/resources/operations?view=dsc-3.0">
                    <Run x:Uid="ValidationPage_LearnMoreLink"/>
                </Hyperlink>
            </TextBlock>

            <TabView CanReorderTabs="False"
                     AddTabButtonCommand="{x:Bind ViewModel.AddUnitValidationCommand}"
                     TabItemsSource="{x:Bind ViewModel.ValidateUnitList}"
                     TabCloseRequested="UnitValidation_TabCloseRequested"
                     SelectedItem="{x:Bind ViewModel.SelectedUnit, Mode=TwoWay}">
                <TabView.Resources>
                    <StaticResource x:Key="TabViewItemHeaderBackgroundSelected" ResourceKey="CardBackgroundFillColorDefaultBrush" />
                </TabView.Resources>
                <TabView.TabItemTemplate>
                    <DataTemplate x:DataType="vm:ValidateUnitViewModel">
                        <TabViewItem>
                            <TabViewItem.Header>
                                <TextBlock Text="{x:Bind Title, Mode=OneWay}" TextTrimming="CharacterEllipsis" />
                            </TabViewItem.Header>
                            <TabViewItem.IconSource>
                                <FontIconSource Glyph="&#xE8E4;"/>
                            </TabViewItem.IconSource>
                        </TabViewItem>
                    </DataTemplate>
                </TabView.TabItemTemplate>
            </TabView>
        </StackPanel>

        <!-- Page command -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <localControls:ResourceAutoSuggestBox Text="{x:Bind ViewModel.SelectedUnit.SearchResourceText, Mode=TwoWay}" />
            </Grid>

            <CommandBar Grid.Column="1"
                        HorizontalAlignment="Left"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Stretch"
                        DefaultLabelPosition="Right">
                <AppBarButton Label="Get" Icon="Download" Command="{x:Bind ViewModel.SelectedUnit.GetCommand, Mode=OneWay}" />
                <AppBarButton Label="Set" Icon="Upload" Command="{x:Bind ViewModel.SelectedUnit.SetCommand, Mode=OneWay}" />
                <AppBarButton Label="Test" Icon="Accept" Command="{x:Bind ViewModel.SelectedUnit.TestCommand, Mode=OneWay}" />
                <AppBarButton Label="Cancel" Icon="Cancel" Command="{x:Bind ViewModel.SelectedUnit.CancelCommand, Mode=OneWay}" />
                <AppBarButton Label="Back to configuration" Icon="Back" />
                <AppBarButton Label="Save to original" Icon="Save" />
            </CommandBar>
        </Grid>

        <!-- Page content -->
        <Grid Grid.Row="2" ColumnSpacing="8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" MinWidth="{StaticResource SectionMinWidth}"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*" MinWidth="{StaticResource SectionMinWidth}"/>
            </Grid.ColumnDefinitions>

            <!-- Settings panel -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Settings header -->
                <TabView TabWidthMode="SizeToContent" IsAddTabButtonVisible="False" SelectedIndex="0">
                    <TabView.Resources>
                        <StaticResource x:Key="TabViewItemHeaderBackgroundSelected" ResourceKey="CardBackgroundFillColorDefaultBrush" />
                        <StaticResource x:Key="TabViewItemHeaderFontSize" ResourceKey="CaptionTextBlockFontSize" />
                        <StaticResource x:Key="TabViewItemHeaderIconSize" ResourceKey="CaptionTextBlockFontSize" />
                    </TabView.Resources>
                    <TabView.TabStripHeader>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Margin="0,6,12,0">
                            <FontIcon Glyph="&#xE713;" FontSize="{ThemeResource CaptionTextBlockFontSize}" Margin="{ThemeResource XSmallRightMargin}" />
                            <TextBlock VerticalAlignment="Center" Style="{ThemeResource CaptionTextBlockStyle}">Settings</TextBlock>
                        </StackPanel>
                    </TabView.TabStripHeader>
                    <TabViewItem Header="YAML" IsClosable="False">
                        <TabViewItem.IconSource>
                            <FontIconSource Glyph="&#xE943;" />
                        </TabViewItem.IconSource>
                    </TabViewItem>
                </TabView>

                <!-- Settings -->
                <localControls:MonacoEditor Grid.Row="1" Text="{x:Bind ViewModel.SelectedUnit.SettingsText, Mode=TwoWay}" Syntax="yaml" />
            </Grid>

            <!-- Resizer -->
            <controls:GridSplitter Grid.Column="1" />

            <!-- Results output -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Result header -->
                <TabView TabWidthMode="SizeToContent" IsAddTabButtonVisible="False" SelectedIndex="0">
                    <TabView.Resources>
                        <StaticResource x:Key="TabViewItemHeaderBackgroundSelected" ResourceKey="CardBackgroundFillColorDefaultBrush" />
                        <StaticResource x:Key="TabViewItemHeaderFontSize" ResourceKey="CaptionTextBlockFontSize" />
                        <StaticResource x:Key="TabViewItemHeaderIconSize" ResourceKey="CaptionTextBlockFontSize" />
                    </TabView.Resources>
                    <TabView.TabStripHeader>
                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal" Margin="0,6,12,0">
                            <FontIcon Glyph="&#xE700;" FontSize="{ThemeResource CaptionTextBlockFontSize}" Margin="{ThemeResource XSmallRightMargin}" />
                            <TextBlock Style="{ThemeResource CaptionTextBlockStyle}">Output</TextBlock>
                        </StackPanel>
                    </TabView.TabStripHeader>
                    <TabViewItem x:Name="NoResultTabViewItem"
                                 Header="No result"
                                 IsClosable="False"
                                 IsSelected="{x:Bind ViewModel.SelectedUnit.ShowNoResultState, Mode=OneWay}"
                                 Visibility="{x:Bind ViewModel.SelectedUnit.ShowNoResultState, Mode=OneWay}">
                        <TabViewItem.IconSource>
                            <FontIconSource Glyph="&#xF140;" />
                        </TabViewItem.IconSource>
                    </TabViewItem>
                    <TabViewItem x:Name="YamlResultTabViewItem"
                                 Header="YAML"
                                 IsClosable="False"
                                 IsSelected="{x:Bind ViewModel.SelectedUnit.ShowOutputText, Mode=OneWay}"
                                 Visibility="{x:Bind ViewModel.SelectedUnit.ShowOutputText, Mode=OneWay}">
                        <TabViewItem.IconSource>
                            <FontIconSource Glyph="&#xE943;" />
                        </TabViewItem.IconSource>
                    </TabViewItem>
                </TabView>

                <!-- Result output box -->
                <Grid Grid.Row="1">
                    <localControls:EmptyStateControl Glyph="&#xE8BC;"
                                                     Visibility="{x:Bind NoResultTabViewItem.IsSelected, Mode=OneWay}"
                                                     Text="Results will appear here once you run an operation" />

                    <Grid Visibility="{x:Bind YamlResultTabViewItem.IsSelected, Mode=OneWay}">
                        <localControls:MonacoEditor Text="{x:Bind ViewModel.SelectedUnit.OutputText, Mode=OneWay}" Syntax="yaml" IsReadOnly="True" />

                        <!-- Copy button -->
                        <localControls:CopyButton Content="&#xE8C8;"
                                                  Click="{x:Bind CopyResultsToClipboard}"
                                                  VerticalAlignment="Top"
                                                  HorizontalAlignment="Right"
                                                  Background="Transparent"
                                                  BorderThickness="0"
                                                  Margin="10"/>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>