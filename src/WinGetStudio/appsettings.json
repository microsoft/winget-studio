{
    "LocalSettingsOptions": {
        "ApplicationDataFolder": "WinGetStudio/ApplicationData",
        "LocalSettingsFile": "LocalSettings.json"
    },
    "Serilog": {
        "Using": [
            "Serilog.Sinks.Console",
            "Serilog.Sinks.File",
            "Serilog.Sinks.Debug",
            "Serilog.Enrichers.Environment",
            "Serilog.Enrichers.Thread"
        ],
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "Microsoft.Hosting.Lifetime": "Information",
                "System": "Warning",
                "WinGetStudio": "Debug"
            }
        },
        "WriteTo": [
            {
                "Name": "Console",
                "Args": {
                    "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3}] [{Application} v{Version}] [{ThreadId}] ({SourceContext}) {Message:lj}{NewLine}{Exception}",
                    "restrictedToMinimumLevel": "Debug"
                }
            },
            {
                "Name": "Async",
                "Args": {
                    "bufferSize": 10000,
                    "configure": [
                        {
                            "Name": "File",
                            "Args": {
                                "path": "%WINGETSTUDIO_LOGS_ROOT%\\WinGetStudio.log",
                                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3}] [{Application} v{Version}] [{MachineName}] [{ThreadId}] ({SourceContext}) {Message:lj}{NewLine}{Exception}",
                                "restrictedToMinimumLevel": "Debug",
                                "rollingInterval": "Infinite"
                            }
                        }
                    ]
                }
            },
            {
                "Name": "Async",
                "Args": {
                    "bufferSize": 5000,
                    "configure": [
                        {
                            "Name": "File",
                            "Args": {
                                "path": "%WINGETSTUDIO_LOGS_ROOT%\\WinGetStudio-errors.log",
                                "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff} {Level:u3}] [{Application} v{Version}] [{MachineName}] [{ThreadId}] ({SourceContext}) {Message:lj}{NewLine}{Exception}",
                                "restrictedToMinimumLevel": "Error",
                                "rollingInterval": "Infinite"
                            }
                        }
                    ]
                }
            },
            {
                "Name": "Debug"
            },
            {
                "Name": "Async",
                "Args": {
                    "bufferSize": 10000,
                    "configure": [
                        {
                            "Name": "File",
                            "Args": {
                                "path": "%WINGETSTUDIO_LOGS_ROOT%\\WinGetStudio-structured.json",
                                "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact",
                                "restrictedToMinimumLevel": "Debug",
                                "rollingInterval": "Infinite"
                            }
                        }
                    ]
                }
            }
        ],
        "Enrich": [
            "FromLogContext",
            "WithMachineName",
            "WithEnvironmentName",
            "WithThreadId"
        ],
        "Properties": {
            "Application": "WinGetStudio"
        }
    }
}